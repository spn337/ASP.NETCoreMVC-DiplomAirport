@model Product

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/img/" + (Model.PhotoName ?? "default.png");
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-6 m-auto">
            <img class="card-img-top" src=@photoPath alt="@Model.Name"
                 asp-append-version="true" />
            <div class="card-body">
                <h5 class="card-title product__item-text">@Model.Name</h5>
                <div class="d-flex justify-content-between">
                    <h4 class="card-title">@Model.Price</h4>
                    <a class="btn btn-warning">В кошик</a>
                </div>
            </div>

            <div class="form-group row mt-4">
                <div class="col-sm-10">
                    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>