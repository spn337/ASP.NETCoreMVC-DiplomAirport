@{
    ViewData["Title"] = "HomePage";
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager;

<div class="container">
    <nav class="navbar navbar-light bg-light d-flex justify-content-end">
        @if (signInManager.IsSignedIn(User))
        {
            <form method="post" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="btn btn-primary ml-1">
                    Logout @User.Identity.Name
                </button>
            </form>
        }
        else
        {
            <a class="btn btn-primary ml-1"
               asp-controller="Account" asp-action="Login">Login</a>
            <a class="btn btn-primary ml-1"
               asp-controller="Account" asp-action="Registration">Registration</a>
        }
    </nav>
</div>