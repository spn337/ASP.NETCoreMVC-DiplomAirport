@model EditUserViewModel
@{
    ViewBag.Title = "Edit User";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-6 m-auto">
            <h1>Edit User</h1>

            <form method="post">
                @*Field*@
                <div class="form-group">
                    <label asp-for="Id"></label>
                    <input asp-for="Id" class="form-control" disabled />
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender"></label><br />
                    <div class="form-check d-flex justify-content-around">
                        <div>
                            <input class="form-check-input" type="radio" asp-for="Gender" id="genderMale" value="Male">
                            <label class="form-check-label" for="genderMale">Male</label>
                        </div>
                        <div>
                            <input class="form-check-input" type="radio" asp-for="Gender" id="genderFemale" value="Female">
                            <label class="form-check-label" for="genderFemale">Female</label>
                        </div>
                    </div>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country"></label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                @*Buttons*@
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a class="btn btn-danger" asp-action="ListUsers">Cancel</a>
                    </div>
                </div>
            </form>

            @*Lists*@
        <div class="card">
            <div class="card-header">
                <h3>Users Roles</h3>
            </div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    foreach (var role in Model.Roles)
                    {
                        <h5 class="card-title">@role</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRolesInUser" asp-controller="Administration" asp-route-userId="@Model.Id">
                    Manage Roles
                </a>
            </div>
        </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h3>Users Claims</h3>
                </div>
                <div class="card-body">
                    @if (Model.Claims.Any())
                    {
                        foreach (var claim in Model.Claims)
                        {
                            <h5 class="card-title">@claim</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">None at the moment</h5>
                    }
                </div>
                <div class="card-footer">
                    <a href="#" class="btn btn-primary">
                        Manage Claims
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

